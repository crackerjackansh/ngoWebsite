<%- include("partials/header") -%>

	<body class="activitiesPage">
		
		<%- include("partials/navbar") -%>



        <div class="container">
                
            <div class="jumbotron">
                <h1>Activities</h1>
            </div>
            <div class="row">
              <% activities.forEach(function(activity){ %>
                <div class="col-lg-4 col-md-6 sm-6">
                    
                    <div class="card" >
                      
                        <% if(files){ %>
                          <% files.forEach(function(file) { %>
                            
                            <% if(file.filename==activity.image) { %>
                              <% if(file.isImage) { %>
                                    <img class="card-img-top img-thumbnail border-0" src="image/<%= file.filename %>" alt="Card image cap">
                                    <% } else { %>
                                      <%= file.filename %>
                                        <% } %>
                                    <% } %>
                                <% }) %>
                                    <% } else { %>
                                    <p>No files to show</p>
                                    <% } %>
                        
                            <div class="card-body p-3">
                            
                                <h5 class="card-title text-center"><%= activity.title %></h5>
                                  <p class="card-text text-justify"><%= activity.body.substring(0,125) %>...</p>
                                  <p class="text-center m-0">
                                    <a href="/" class="btn btn-primary "  data-toggle="modal" data-target="#<%= activity._id %>">Read more</a>
                                  </p>
                            
                          
                            </div>
                    </div>

                    
                </div>
                
                  <!-- Activities Modal -->
                  <div class="modal fade" id="<%= activity._id %>" tabindex="-1" role="dialog" aria-labelledby="<%= activity._id %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                      <h5 class="modal-title" id="<%= activity._id %>"><%= activity.title %></h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                      </div>
                      <div class="modal-body">
                              <!-- <h1 class="text-center my-2">Title</h1> -->
                              
                                <% if(files){ %>
                                  <% files.forEach(function(file) { %>
                                    
                                    <% if(file.filename==activity.image) { %>
                                      <% if(file.isImage) { %>
                                            <img class="card-img-top img-thumbnail border-0" src="image/<%= file.filename %>" alt="Card image cap">
                                            <% } else { %>
                                              <%= file.filename %>
                                                <% } %>
                                            <% } %>
                                        <% }) %>
                                            <% } else { %>
                                            <p>No files to show</p>
                                            <% } %>
                                   
                              <div class="card-body">
                                <div class="card-text">
                                  <p class="d-flex justify-content-between">
                                    <span><i class="fas fa-map-marker-alt"></i>&nbsp;<%= activity.location %></span>
                                    <span ><i class="far fa-calendar-alt"></i>&nbsp;<%= new Date(activity.doneDate).toDateString().replace(' ',' , ') %></span>
                                  </p>
                                  <p class="text-justify mt-3">
                                    <%= activity.body %>
                                  </p>
                                </div>
                              </div>
                      </div>
                      <div class="modal-footer">
                      <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                    </div>
                  </div>
              <% }); %>
                
            </div>


        </div>

    


<%- include("partials/footer") -%>